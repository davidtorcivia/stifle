# Docker Compose Configuration
# Copy this to .env

# App Environment
NODE_ENV=development

# Database Credentials
POSTGRES_USER=stifle
POSTGRES_PASSWORD=stifle_dev
POSTGRES_DB=stifle

# Ports
SERVER_PORT=3000
REDIS_PORT=6379
POSTGRES_PORT=5432
ADMIN_PORT=5173

# Internal Service URLs (for Docker network)
# These are constructed using the container names and credentials
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@stifle-postgres:5432/${POSTGRES_DB}
REDIS_URL=redis://stifle-redis:6379
